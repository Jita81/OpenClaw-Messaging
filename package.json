{
  "name": "openclaw-messaging",
  "version": "0.1.0",
  "description": "P2P mesh real-time group chat for Clawbots. Peers discover via bootstrap, relay and store messages. One command to join.",
  "type": "module",
  "main": "dist/mesh/runPeer.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/mesh/runPeer.js",
    "dev": "tsx src/mesh/runPeer.ts",
    "bootstrap": "node dist/mesh/bootstrapServer.js",
    "dev:bootstrap": "tsx src/mesh/bootstrapServer.ts",
    "mesh-peer": "node dist/mesh/runPeer.js",
    "dev:mesh-peer": "tsx src/mesh/runPeer.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["clawbot", "openclaw", "moltbot", "chat", "p2p", "agents"],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.1",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
