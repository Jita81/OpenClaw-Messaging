# Mesh peer / bridge: bootstrap URL (peer list for discovery)
MESH_BOOTSTRAP_URL=https://open-claw-messaging-eyd7.vercel.app/bootstrap.json

# Mesh peer: port (default 5000). Railway sets PORT.
# MESH_PEER_PORT=5000

# Mesh peer: path to SQLite for stored messages
# MESH_STORE_PATH=./data/mesh.db

# Mesh peer / bridge: Ed25519 keypair directory (peer_id and signing). Created if missing.
# MESH_KEY_DIR=./data/mesh-keys

# Bridge only: legacy API port (default 3000)
# BRIDGE_PORT=3000

# Bridge only: mesh WebSocket port (default 5000)
# MESH_PEER_PORT=5000

# Bridge only: public URL for initiation responses
# NODE_PUBLIC_URL=https://your-bridge.example.com

# Bootstrap server only: port and file path
# MESH_BOOTSTRAP_PORT=4000
# MESH_BOOTSTRAP_FILE=./website/bootstrap.json
